<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    app:cardBackgroundColor="@color/White"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <Switch
            android:id="@+id/switch_pin_on_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/galano_grotesque_medium"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:switchPadding="@dimen/_20sdp"
            android:text="@string/pin_on_top"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/_11ssp" />

        <Switch
            android:id="@+id/switch_mute_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/galano_grotesque_medium"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:switchPadding="@dimen/_20sdp"
            android:text="@string/mute_chat"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/_11ssp" />
        <TextView
            android:id="@+id/tv_view_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:fontFamily="@font/galano_grotesque_medium"
            android:padding="@dimen/_10sdp"
            android:text="@string/view_tag"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
</layout>