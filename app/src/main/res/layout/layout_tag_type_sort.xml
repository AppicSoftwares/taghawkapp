<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            android:paddingBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_all"
                    style="@style/sort_style"
                    android:text="@string/all_tag"
                    android:visibility="gone"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Apartment"
                    style="@style/sort_style"
                    android:text="Apartments"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Universities"
                    style="@style/sort_style"
                    android:text="Universities"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Organization"
                    style="@style/sort_style"
                    android:text="Organizations" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Club"
                    style="@style/sort_style"
                    android:text="Clubs"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Other"
                    style="@style/sort_style"
                    android:text="Others"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_my_tag"
                    style="@style/sort_style"
                    android:text="@string/my_tag"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>