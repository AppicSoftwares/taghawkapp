<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical">

        <include
            android:id="@+id/include_header"
            layout="@layout/layout_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:elevation="@dimen/_4sdp"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_step_one_circle"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/circle_color_primary"
                android:fontFamily="@font/galano_grotesque_semi_bold"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/White"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_line"
                android:layout_width="@dimen/_95sdp"
                android:layout_height="@dimen/_1ssp"
                android:layout_gravity="center_vertical"
                android:background="@color/semi_transperent_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_step_two_circle"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/circle_white"
                android:fontFamily="@font/galano_grotesque_semi_bold"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/shipping_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp" />

    </LinearLayout>
</layout>