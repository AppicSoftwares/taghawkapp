<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeTheme" parent="android:Theme.Material.Light.LightStatusBar" tools:ignore="NewApi">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/White</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
    </style>

    <declare-styleable name="TextView">
        <attr name="fontName" format="string" />
    </declare-styleable>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="signup">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>

    </style>


    <style name="login_type_txt">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>

    </style>

    <style name="login_type_txt_lets">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/txt_light_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
        <item name="android:drawableEnd">@drawable/ic_tab_arrow</item>
    </style>

    <style name="signup_multi">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="input_edit_field">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/line_hint_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="post_in_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="report_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
        <item name="android:button">@drawable/radio_button_toggle</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="sort_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="details_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:fontFamily">@font/galano_grotesque_semi_bold</item>
    </style>

    <style name="add_product">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>

    <style name="add_product_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/_11sdp</item>
        <item name="android:background">@drawable/edit_field_drawable</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>


    <style name="add_product_edit_text_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:layout_marginTop">@dimen/_11sdp</item>
        <item name="android:background">@drawable/edit_field_drawable</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>

    <style name="add_product_location">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:background">@drawable/edit_field_drawable</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>

    <style name="shipping_avalibilty">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_11sdp</item>
        <item name="android:background">@drawable/edit_field_drawable</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>

    <style name="plan_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:background">@drawable/rounded_corner_color_primary</item>
        <item name="android:fontFamily">@font/galano_grotesque_semi_bold</item>
    </style>

    <style name="plan_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>

    <style name="add_tag_circle">
        <item name="android:layout_width">@dimen/_38sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/filled_color_primary_circle</item>
        <item name="android:fontFamily">@font/galano_grotesque_semi_bold</item>
    </style>

    <style name="add_tag_circle_disabled">
        <item name="android:layout_width">@dimen/_38sdp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_circle_border_grey</item>
        <item name="android:fontFamily">@font/galano_grotesque_semi_bold</item>
    </style>

    <style name="add_tag_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
    </style>

    <style name="add_tag_refer_friend">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:fontFamily">@font/galano_grotesque_semi_bold</item>
    </style>

    <style name="add_tag_refer_friend_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
    </style>

    <style name="add_tag_refer_code">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:fontFamily">@font/galano_grotesque_bold</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/Black</item>
        <item name="tabBackground">@color/White</item>
        <item name="tabIndicatorHeight">@dimen/_4sdp</item>
        <!--  <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>-->
        <item name="tabSelectedTextColor">@color/Black</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    </style>


    <style name="CustomTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@String/ProximaNova_Bold.ttf</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/rating_star_color</item>
        <item name="colorControlNormal">@color/LightGrey</item>
    </style>

    <style name="payment_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:fontFamily">@font/galano_grotesque_medium</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="routing_number">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/txt_light_gray</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:background">@drawable/edit_field_drawable</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="setting_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/galano_grotesque_regular</item>
        <item name="android:paddingTop">@dimen/_15sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>
</resources>
